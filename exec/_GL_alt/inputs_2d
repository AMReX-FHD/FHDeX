  ! Controls for number of steps between actions
  max_step = 6000000
  plot_int  = 1000
  n_steps_skip = 0

  ! Boundary conditions
  ! ----------------------
  ! BC specifications:
  ! -1 = periodic, 1 = slip adiabatic, 2 = no slip thermal
  bc_lo(1:2) = -1 -1
  bc_hi(1:2) = -1 -1

