  prob_hi(1:2) = 4.0 4.0      ! physical hi coordinate

  ! Number of ghost cells, conserved, and primitive variables
  ! ---------------------
  ngc = 1 1
  nvars = 1
    
  ! number of cells in domain
  n_cells(1:2) = 128 128
  ! max number of cells in a box
  max_grid_size(1:2) = 64 64

  ! Time-step control
