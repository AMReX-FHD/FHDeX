&common

 ! Problem specification
  prob_lo(1:3) = 0.0 0.0 0.0     			 	  ! physical lo coordinate
  prob_hi(1:3) = 1.25e-2 5.0e-3 1.25e-2	! physical hi coordinate (cm)

  n_cells(1:3) = 1 128 1 ! keep as powers of two
  max_grid_size(1:3) = 1 16 1
  max_particle_tile_size(1:3) = 256 256 256

  ! Time-step control
  fixed_dt = 1e-8                        ! dt = dx/(10*sqrt(kT/m))

  ! Controls for number of steps between actions
  max_step =    100000000
  plot_int =      5000000
  n_steps_skip =  5000000
  struct_fact_int = 10

  reset_stats = 1
  restart  = -1
  chk_int  = 10000000

  !particle initialization (-1 - no input; 1 - input provided)
  particle_input = -1
  particle_neff = 5e-2

  !Species info
  !--------------
  nspecies     =  1
  mass         =  1.636e-8 1.636e-8 ! kg
  diameter     =  2.5e-4 4.5e-4
  qval	       =  2.5e-5 4.5e-5
  phi_domain   =  0.01 0.005
  !particle_n0 =  1.2223e9 1.2223e9
  
  ! write each row, i.e. 1-1, 1-2, 1-3 .... 2-1, 2-2 ,2-3 ....
  ! need total nspecies*nspecies values
  alpha_pp = 1.00
  
  ! Stochastic parameters
  seed    = 0
  k_B     = 1.38064852e-16
  T_init  = 1.187e8
  variance_coef_mom = 1

  ! Boundary conditions:
  ! NOTE: setting bc_vel to periodic sets all the other bc's to periodic)
  ! bc_vel:   -1 = periodic  
  !            1 = slip
  !            2 = no-slip
  !            3 = Lees-Edwards
  ! bc_therm: -1 = periodic
  !            1 = adiabatic
  !            2 = isothermal (set with t_lo/hi in common namelist)
  ! bc_mass:  -1 = periodic
  !            1 = wall
  !            2 = reservoir (set bc_Yk or bc_Xk in compressible namelist)

  bc_vel_lo(1:3)   = -1 3 -1
  bc_vel_hi(1:3)   = -1 3 -1  
  bc_therm_lo(1:3) = -1 -1 -1
  bc_therm_hi(1:3) = -1 -1 -1
  bc_mass_lo(1:3)  = -1 -1 -1
  bc_mass_hi(1:3)  = -1 -1 -1
  
  ! Temperature if thermal BC specified
  t_hi(1:3) = 0.5 0.5 0.5
  t_lo(1:3) = 0.5 0.5 0.5
  
  ! Total density at boundaries
  ! Set as same as the internal density
  rho_hi(1:3) = 0.0017787 0.0017787 0.0017787
  rho_lo(1:3) = 0.0017787 0.0017787 0.0017787
  
  ! Xk and Yk at the wall for Dirichlet (concentrations) - set one to zero
  ! Ordering: (species 1, x-dir), (species 2, x-dir), ... (species 1, y-dir), ... 
  
  bc_Yk_x_lo = 0.5  0.5   ! lo BC
  bc_Yk_x_hi = 0.5  0.5   ! hi BC
  bc_Yk_y_lo = 1.0  1.0   ! lo BC
  bc_Yk_y_hi = 1.0  1.0   ! hi BC
  bc_Yk_z_lo = 1.0  1.0   ! lo BC
  bc_Yk_z_hi = 1.0  1.0   ! hi BC
/
