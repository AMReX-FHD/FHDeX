&common

  ! Problem specification
  prob_lo(1:3) = 0.0 0.0 0.0      ! physical lo coordinate
  prob_hi(1:3) = 0.5e-5 0.5e-5 0.5e-5     ! physical hi coordinate
    
  ! number of cells in domain
  n_cells(1:3) = 8 8 8
  ! max number of cells in a box
  max_grid_size(1:3) = 8 8 8

  ! above settings are for fluid grid. EM and particle grid (the grid for finding neighbour lists) are coarsened or refined off these grids. <1 = refine, >1 = coarsen.
  !Leave these on 1 until properly tested
  particle_grid_refine = 1
  es_grid_refine = 1

  ! Time-step control
  fixed_dt = 2.5e-14

  ! Controls for number of steps between actions
  max_step = 100000
  plot_int = 500
  plot_ascii = 0
  struct_fact_int = 1
  n_steps_skip = 5000

  ! Toggles 0=off, 1=on
  fluid_tog = 0 ! 0=Do nothing, 1=Do stokes solve, 2=Do low Mach solve
  es_tog = 2 ! Do electrostatic solve 0=off, 1=Poisson, 2=Pairwise Coulomb (Doesn't work in parallel)
  drag_tog = 0 ! Apply drag force to fluid
  rfd_tog = 0 ! Apply RFD force to fluid
  move_tog = 1 ! Total particle move
  dry_move_tog = 1 ! Dry particle move
  sr_tog = 1 ! Short range forces

  
  solve_type = 0 ! 0=overdamped, 1=intertial
 

  ! Fluid info
  !--------------
  ! Viscous friction L phi operator
  ! if abs(visc_type) = 1, L = div beta grad
  ! if abs(visc_type) = 2, L = div [ beta (grad + grad^T) ]
  ! if abs(visc_type) = 3, L = div [ beta (grad + grad^T) + I (gamma - (2/3)*beta) div ]
  ! positive = assume constant coefficients
  ! negative = assume spatially-varying coefficients
  visc_coef = 1e-2
  visc_type = 1
  perm = 1.

  !particle initialization
  ! 1 = spread evenly per cell (not implemented yet), 2 = spread randomly over domain
  particle_placement = 2
  ! -1 = calculate based on n0
  particle_count = -1 -1
  ! real particles per simulator particle
  particle_neff = 1
  ! ignore if particle_count is positive
  particle_n0 = 6.02e18 6.02e18

  !Species info
  !--------------
  nspecies = 2
  mass = 4e-23 4e-23
  diameter = -2.488e-8 -2.488e-8 
  !nfrac =  0.5 0.5 !species fraction is ignored for now and info from particle initialization is used
  qval = 1.6e-19 -1.6e-19
!  qval = 4.8e-10 -4.8e-10
  diff = 1.33e-05 1.33e-05
 !If diameter is negative, this value will be used. If diameter is positive, it will be ignored. This is the total wet+dry diffusion. The wet component arises from the grid size and peskin kernel, the dry component is set to recover the value entered here.
 
  eepsilon = 1e-16 1e-16 !WCA potential---note that Aleks uses 10^-3 but we're not sure of the units in BDWoGF
  sigma = 3.4e-8 3.4e-8   !Close range repulsion diameter

  !Interaction parameters
  !------------
  permitivitty = 8.85e-21
  !cut_off = 8.732e-8    !cutoff range for close range potential - this is being calculated off sigma now.
  rmin = 5e-8     !Minimum range to prevent blow up of force.  NOTE, THIS IS A RADIUS, THE OTHER VALUES ARE DIAMETER. YES THIS IS STUPID.
  crange = 1        !cell depth when building neighbour lists
  images = 1    !if pairwise Coulomb interactions have been selected, this is the number of periodic images to use

  eamp = 1e15 0 0  !external electric field properties
  efreq = 0 0 0
  ephase = 0 0 0     

  ! Poisson solver parameters -- there are more options which we can add to the namespace later
  !-------------------
  poisson_rel_tol = 1.e-7                ! relative tolerance stopping criteria
  poisson_verbose =  0                   ! multigrid verbosity
  poisson_bottom_verbose =  0            ! base solver verbosity
  poisson_max_iter = 100                 


  !Peskin kernel (Currently 3, 4, & 6 implemented)
  !--------
  pkernel_fluid = 4
  pkernel_es = 4

  ! Stochastic parameters
  k_B = 1.38064852e-16
  T_init(1) = 295.00
  variance_coef_mom = 1
   

  ! Boundary conditions
  ! ----------------------
  ! BC specifications:
  ! -1 = periodic, 2 = no slip stationary
  bc_lo(1:3) = -1 -1 -1
  bc_hi(1:3) = -1 -1 -1

  !wallspeed_lo(1:3) = 0 0 0 !Not implemented yet.
  !wallspeed_hi(1:3) = 0 0 0 !Not implemented yet.

  ! -1 = periodic, 1 = dirichlet, 2 = neumann
  bc_es_lo(1:3) = -1 -1 -1
  bc_es_hi(1:3) = -1 -1 -1

  potential_lo(1:3) = 0 0 0 ! For use with dirichlet, not fully implemented yet.
  potential_hi(1:3) = 0 0 0 !

  
/

&gmres

  ! GMRES solver parameters
  gmres_rel_tol = 1.e-6                ! relative tolerance stopping criteria
  gmres_abs_tol = 0                     ! absolute tolerance stopping criteria
  gmres_verbose =  0                    ! gmres verbosity; if greater than 1, more residuals will be printed out
  gmres_max_outer = 20                  ! max number of outer iterations
  gmres_max_inner = 20                   ! max number of inner iterations, or restart number
  gmres_max_iter = 100                  ! max number of gmres iterations
  gmres_min_iter = 1                    ! min number of gmres iterations

/
